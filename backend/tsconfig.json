{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@app/api/*": ["src/api/*"],
      "@app/mocks/*": ["mocks/*"],
      "@app/services/*": ["src/services/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
